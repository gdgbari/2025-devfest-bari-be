{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./src",
    "paths": {
      "@models*": [
        "models/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}